{
  "item": [
    {
      "name": "Setup",
      "type": "folder",
      "item": [
        {
          "request": {
            "method": "GET",
            "url": {
              "path": ["organizations"],
              "host": ["{{BASE_URL}}"],
              "raw": "{{BASE_URL}}/organizations"
            }
          },
          "name": "Step 1 - Select parent organization",
          "description": {
            "content": "Fetch all organizations and select first production organization for a parent.\nAlso selects randomized organization name and sets a postman variable."
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "var jsonData = JSON.parse(responseBody);", "var prodOrg = jsonData.filter(org => org.environment == \"production\");",
                  "postman.setEnvironmentVariable(\"organization-parent\", prodOrg[0].id);", "var randomId = Math.random().toString(36).substring(7);",
                  "pm.environment.set(\"ORGANIZATION\", prodOrg[0].id + \"-demo-\" + randomId)"
                ]
              }
            }
          ],
          "type": "item"
        }, {
          "request": {
            "method": "POST",
            "header": [
              {
                "value": "application/json",
                "key": "Content-Type"
              }
            ],
            "body": {
              "raw": "{\n  \"parent_id\" : \"{{organization-parent}}\",\n  \"environment\": \"sandbox\",\n  \"name\": \"{{ORGANIZATION}}\"\n}\n          "
            },
            "url": {
              "path": ["organizations"],
              "host": ["{{BASE_URL}}"],
              "raw": "{{BASE_URL}}/organizations"
            }
          },
          "name": "Step 2 - Create organization with randomized name",
          "type": "item"
        }
      ]
    }, {
      "name": "catalogs",
      "type": "folder",
